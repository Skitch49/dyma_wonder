<div class="d-flex flex-column mr-20 align-items-center">
	<a href="{{from == 'question' ? path('question_rating',{id: id, score:1}) : path('question_comment_rating',{id: id, score:1})}}">
		<i class="fa-solid fa-arrow-up {{ rating > 0 ? 'rating-up' : '' }}"></i>
	</a>
	<p class="text-small {{ rating > 0 ? 'rating-up' : rating < 0 ? 'rating-down' : ''}}">
		{{ rating }}</p>
	<a href="{{from == 'question' ? path('question_rating',{id: id, score:-1}) : path('question_comment_rating',{id: id, score:-1})}}">

		<i class="fa-solid fa-arrow-down {{ rating < 0 ? 'rating-down' : '' }}"></i>
	</a>
</div>
