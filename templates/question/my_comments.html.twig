{% extends 'base.html.twig' %}

{% block title %}Mes réponses
{% endblock %}

{% block body %}
	<div class="block mb-20">

		<h2 class="pb-30">Mes réponses</h2>
		<ul>
			{% if comments is not empty %}
				{% for comment in comments %}
					<li>
						<a href="{{ path('question_show',{id: comment.question.id}) }}">{{comment.content | slice(0,50 )}}
							...</a>
					</li>
				{% endfor %}
			{% else %}
				<p>Vous n'avez encore pas répondu a une seule question !</p>
			{% endif %}


		</ul>
	</div>


{% endblock %}
