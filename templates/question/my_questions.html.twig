{% block title %}Mes questions
{% endblock %}

{% block body %}
	<div class="block mb-20">

		<h2 class="pb-30">Mes questions</h2>
		<ul>
			{% if questions is not empty %}
				{% for question in questions %}
					<li>
						<a href="{{ path('question_show',{id: question.id}) }}">{{question.title}}</a>
					</li>
				{% endfor %}
				{% else %}
                <p>Vous n'avez pas encore pos√© de question !</p>

			{% endif %}


		</ul>
	</div>


{% endblock %}
